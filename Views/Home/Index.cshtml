@{
    ViewBag.Title = "SMS Home";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(180deg, #f5f7fa 0%, #e6e9f0 100%);
            font-family: 'Segoe UI', sans-serif;
        }

        .header {
            background: #fff;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
            padding: 12px 0;
        }

        .logo {
            font-weight: bold;
            color: #5b3cc4;
            font-size: 1.3rem;
        }

        .subtitle {
            font-size: 0.9rem;
            color: #888;
        }

        .nav-btn {
            margin-left: 8px;
        }

        .main-title {
            color: #5b3cc4;
            font-size: 2.8rem;
            font-weight: bold;
            text-align: center;
            margin-top: 40px;
        }

        .main-desc {
            text-align: center;
            color: #555;
            margin-bottom: 32px;
        }

        .action-btns {
            display: flex;
            justify-content: center;
            gap: 16px;
            margin-bottom: 40px;
        }

        .feature-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 12px rgba(91,60,196,0.06);
            padding: 32px 20px;
            text-align: center;
            margin-bottom: 24px;
        }

        .feature-icon {
            font-size: 2.2rem;
            margin-bottom: 16px;
        }

        .section-title {
            font-size: 2rem;
            font-weight: bold;
            text-align: center;
            margin: 48px 0 16px 0;
        }

        .section-desc {
            text-align: center;
            color: #666;
            margin-bottom: 32px;
        }

        .footer {
            background: linear-gradient(90deg, #5b3cc4 0%, #3b82f6 100%);
            color: #fff;
            text-align: center;
            padding: 36px 0 24px 0;
            margin-top: 48px;
        }

           
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="container d-flex align-items-center justify-content-between">
            <div>
                <span class="logo"><i class="fa-solid fa-graduation-cap"></i> Smart Student System</span>
                <span class="subtitle d-block">Academic Excellence Through Technology</span>
            </div>
            <div>
                @Html.ActionLink("Admin Signup", "Index", "Admin", null, new { @class = "btn btn-primary btn-sm nav-btn" })
                @Html.ActionLink("Student Signup", "Index", "StudentSignup", null, new { @class = "btn btn-success btn-sm nav-btn" })
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="main-title mt-5">
            Smart Student<br />Journey System
        </div>
        <div class="main-desc mb-4">
            Comprehensive academic management platform that tracks every step<br />
            of a student's educational journey with intelligent semester progression<br />
            and course management.
        </div>
      

        <div class="row mb-5">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon text-primary"><i class="fa-solid fa-book-open"></i></div>
                    <h5>Semester Management</h5>
                    <p>Track 8-semester progression with automatic course assignment and failure handling.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon text-success"><i class="fa-solid fa-chart-line"></i></div>
                    <h5>Academic Tracking</h5>
                    <p>Real-time monitoring of course statuses, grades, and academic progression.</p>
               <br /> </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon text-danger"><i class="fa-solid fa-shield-halved"></i></div>
                    <h5>Secure Management</h5>
                    <p>Role-based access with admin approval system and comprehensive security.</p>
              <br />  </div>
            </div>
        </div>

        <div class="section-title">Comprehensive Academic Management</div>
        <div class="section-desc">
            Everything you need to manage student journeys from enrollment to graduation
        </div>
        <div class="row mb-5">
            <div class="col-md-6">
                <div class="feature-card">
                    <div class="feature-icon text-info"><i class="fa-solid fa-award"></i></div>
                    <h6>Department Management</h6>
                    <p>BSSE, BSAI, BSCS with specialized courses</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card">
                    <div class="feature-icon text-success"><i class="fa-solid fa-clock"></i></div>
                    <h6>Real-time Tracking</h6>
                    <p>Live updates on academic progress</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card">
                    <div class="feature-icon text-purple"><i class="fa-solid fa-file-arrow-down"></i></div>
                    <h6>Export & Reports</h6>
                    <p>Excel exports and detailed analytics</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card">
                    <div class="feature-icon text-success"><i class="fa-solid fa-arrow-up-right-dots"></i></div>
                    <h6>Promotion Logic</h6>
                    <p>Automated semester advancement rules</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <div class="container">
            <h3>Ready to Transform Your Institution?</h3>
            <p>Join hundreds of institutions already using our platform to streamline academic management</p>
          </div>
        <div class="mt-3" style="font-size: 0.9rem;">
            &copy; @DateTime.Now.Year Smart Student System. All rights reserved.
        </div>
    </div>
</body>
</html>