<!-- Students Table -->
<div class="filters">
    @using (Html.BeginForm("Index", "Students", FormMethod.Get))
    {
        <input type="text" name="searchTerm" class="search-input" placeholder="Search students..." />
        <select name="gender" class="filter-select">
            <option value="">All Genders</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <select name="city" class="filter-select">
            <option value="">All Cities</option>
            <!-- Add your city options here -->
        </select>
        <button type="submit" class="btn btn-secondary">Search & Filter</button>
    }
</div>

<table class="students-table table table-bordered">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>Name</th>
            <th>CNIC</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Phone</th>
            <th>City</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.StudentList)
        {
            <tr>
                <td>@student.StudentID</td>
                <td>@student.Name</td>
                <td>@student.CNIC</td>
                <td>@student.Gender</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>@student.City</td>
                <td>@(string.Join(" ", student.Address.Split(' ').Take(3)) + "...")</td>
                <td>
                    <div class="action-menu-container">
                        <button type="button" class="action-menu-btn">---</button>
                        <div class="action-menu-dropdown" style="display:none;">
                            <button type="button" class="btnview viewStudentBtn" data-student-id="@student.StudentID">View</button>
                            <button type="button" class="btnedit editStudentBtn" data-student-id="@student.StudentID">Edit</button>
                            @using (Html.BeginForm("Delete", "Students", FormMethod.Post, new { onsubmit = "return confirm('Are you sure?');" }))
                            {
                                @Html.Hidden("id", student.StudentID)
                                <button type="submit" class="btndelete">Delete</button>
                            }
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

