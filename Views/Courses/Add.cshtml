<script>
    $(document).ready(function () {
        // Add Student Modal
        const addModal = $("#addStudentModal");
        const addForm = $("#studentForm");

        // Update Student Modal
        const updateModal = $("#updateStudentModal");
        const updateForm = $("#updateStudentForm");

        // Open Add Modal
        $("#addStudentBtn").on("click", function () {
            addForm[0].reset();
            addModal.fadeIn();
        });

        // Action Menu Dropdown
        $(".action-menu-btn").on("click", function (e) {
            e.stopPropagation();
            $(".action-menu-dropdown").hide();
            $(this).siblings(".action-menu-dropdown").toggle();
        });

        // Edit Student
        $(".editStudentBtn").click(function () {
            var studentId = $(this).data("student-id");
            $.ajax({
                url: '/Students/GetStudentById',
                type: 'GET',
                data: { id: studentId },
                success: function (student) {
                    $("#UpdateStudent_StudentID").val(student.StudentID);
                    $("#UpdateStudent_Name").val(student.Name);
                    $("#UpdateStudent_CNIC").val(student.CNIC);
                    $("#UpdateStudent_Gender").val(student.Gender);
                    $("#UpdateStudent_Email").val(student.Email);
                    $("#UpdateStudent_Phone").val(student.Phone);
                    $("#UpdateStudent_City").val(student.City);
                    $("#UpdateStudent_Address").val(student.Address);
                    updateModal.fadeIn();
                },
                error: function () {
                    alert("Failed to load student details.");
                }
            });
        });

        // View Student
        $(".viewStudentBtn").click(function () {
            var studentId = $(this).data("student-id");
            $.ajax({
                url: '/Students/GetStudentById',
                type: 'GET',
                data: { id: studentId },
                success: function (student) {
                    $("#ViewStudent_StudentID").text(student.StudentID);
                    $("#ViewStudent_Name").text(student.Name);
                    $("#ViewStudent_CNIC").text(student.CNIC);
                    $("#ViewStudent_Gender").text(student.Gender);
                    $("#ViewStudent_Email").text(student.Email);
                    $("#ViewStudent_Phone").text(student.Phone);
                    $("#ViewStudent_City").text(student.City);
                    $("#ViewStudent_Address").text(student.Address);
                    if (student.Photo) {
                        $("#ViewStudent_Photo").attr("src", "data:image/jpeg;base64," + student.Photo);
                    }
                    $("#viewStudentModal").fadeIn();
                },
                error: function () {
                    alert("Failed to load student details.");
                }
            });
        });

        // Close modals
        $(".close, #cancelModal, #cancelUpdateModal, #closeViewModalBtn").on("click", function () {
            $(".modal").fadeOut();
            addForm[0].reset();
            updateForm[0].reset();
        });
    function changePageSize(size) {
    window.location = '@Url.Action("Index")?page=1&pageSize=' + size +
        '&searchTerm=@Request["searchTerm"]&gender=@Request["gender"]&city=@Request["city"]';
}
        // Form validation
        $("form").on("submit", function (e) {
            let isValid = true;
            $(this).find(".form-control[required]").each(function () {
                if (!$(this).val().trim()) {
                    $(this).css("border", "1px solid red");
                    isValid = false;
                } else {
                    $(this).css("border", "1px solid #ccc");
                }
            });
            if (!isValid) {
                e.preventDefault();
                alert("Please fill in all required fields.");
            }
        });
    });
</script>

